<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:sqli="urn:import:com.binomed.sqli.gwt.client.editor"
     >
    
    <ui:with field="res" type="com.binomed.sqli.gwt.client.resources.ProjectResources" />
	<ui:with field="i18n" type="com.binomed.sqli.gwt.client.resources.i18n.I18N" />
    
    <g:DockLayoutPanel unit="PC" height="500px" >
	  		 <g:center >
				<g:VerticalPanel styleName="{res.css.contentCenter}">
		             <b:Heading size="2" text="{i18n.createTxtWhyTitle}" />
		             <b:Paragraph><ui:text from="{i18n.createTxtWhy}"/></b:Paragraph>
		             <b:Heading size="2" text="{i18n.createTxtWinTitle}" />
		             <b:Paragraph><ui:text from="{i18n.createTxtWin}"/></b:Paragraph>
				</g:VerticalPanel>
   			</g:center>
   			<g:east size="50" >
   				<b:Hero>
					<g:FlowPanel ui:field="userEditor"/>
				</b:Hero>
   			</g:east>
	   </g:DockLayoutPanel>
</ui:UiBinder>